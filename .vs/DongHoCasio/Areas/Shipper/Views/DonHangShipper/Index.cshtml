@model IEnumerable<DongHoCasio.Model.DonHang>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Shipper/Views/Shared/_LayoutShipper.cshtml";
}

<h2>Trang Quản Lý Đơn Hàng</h2>

<hr />
<table class="table">
    <tr>
        <th>
            Mã Đơn Hàng
        </th>
        <th>
            Tổng Tiền
        </th>
        <th>
            Người Nhận
        </th>
        <th>
            Địa Chỉ
        </th>

        <th>
            Số Điện Thoại
        </th>
        <th>
            Trạng Thái Đơn Hàng
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaDH)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TongTien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoTenKH)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SDT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrangThai)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.MaDH }, htmlAttributes: new { @class = "btn-wide btn btn-success btn-sm" }) |
                @Html.ActionLink(" Chi Tiết ", "Details", new { id = item.MaDH }, htmlAttributes: new { @class = "btn badge-warning btn-sm" }) 
            </td>
        </tr>
    }

</table>
