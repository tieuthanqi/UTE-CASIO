    <link href="/Areas/Admin/Contents/vendors/bootstrap-daterangepicker/daterangepicker.css" rel="stylesheet">
    <!-- Custom Theme Style -->
    <link href="/Areas/Admin/Contents/build/css/custom.min.css" rel="stylesheet">
</head>

<body class="nav-md">
    <div class="container body">
        <div class="main_container">
            <div class="col-md-3 left_col">
                <div class="left_col scroll-view">
                    <div class="navbar nav_title" style="border: 0;">
                        <a href="/Admin/Home/Index" class="site_title"><i class="fa fa-paw"></i> <span>Admin</span></a>
                    </div>

                    <div class="clearfix"></div>

                    <!-- menu profile quick info -->
                    <div class="profile clearfix">
                        <div class="profile_pic">
                            <img src="~/Areas/Admin/Contents/Images/@Session["avatar"]" alt="..." class="img-circle profile_img">
                        </div>
                        <div class="profile_info">
                            <span>Welcome,</span>
                            <h2>@Session["username"]</h2>
                        </div>
                    </div>
                    <!-- /menu profile quick info -->

                    <br />

                    <!-- sidebar menu -->
                    <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
                        <div class="menu_section">
                            <h3>Danh mục quản lý</h3>
                            <ul class="nav side-menu">
                                <li><a href="/Admin/Product/Index"><i class="mdi mdi-tent menu-icon"></i>Sản Phẩm</a></li>
                                <li><a href="/Admin/LoaiSanPham/Index"><i class="mdi d-md-inline-block"></i>Loại Sản Phẩm</a></li>
                                <li><a href="/Admin/DonHang/Index"><i class="fa fa-bar-chart"></i>Đơn hàng</a></li>
                                <li><a href="/Admin/ChiTietDonHang/Index"><i class="fa fa-clone"></i>Chi Tiết Đơn Hàng</a></li>
                                <li><a href="/Admin/KhuyenMai/Index"><i class="fa fa-cab"></i>Khuyến Mãi</a></li>
                                <li><a href="/Admin/CTKM/Index"><i class="fa fa-calculator"></i>Chương Trình Khuyến Mãi</a></li>
                                <li><a href="/Admin/User/Index"><i class="fa fa-user"></i>Tài khoản</a></li>

                            </ul>
                        </div>
                    </div>
                    <!-- /sidebar menu -->
                    <!-- /menu footer buttons -->
                    <div class="sidebar-footer hidden-small">
                        <a data-toggle="tooltip" data-placement="top" title="Settings">
                            <span class="glyphicon glyphicon-cog" aria-hidden="true"></span>
                        </a>
                        <a data-toggle="tooltip" data-placement="top" title="FullScreen">
                            <span class="glyphicon glyphicon-fullscreen" aria-hidden="true"></span>
                        </a>
                        <a data-toggle="tooltip" data-placement="top" title="Lock">
                            <span class="glyphicon glyphicon-eye-close" aria-hidden="true"></span>
                        </a>
                        <a data-toggle="tooltip" data-placement="top" title="Logout" href="login.html">
                            <span class="glyphicon glyphicon-off" aria-hidden="true"></span>
                        </a>
                    </div>
                    <!-- /menu footer buttons -->
                </div>
            </div>
            <!-- top navigation -->
            <div class="top_nav">
                <div class="nav_menu">
                    <nav>
                        <div class="nav toggle">
                            <a id="menu_toggle"><i class="fa fa-bars"></i></a>
                        </div>

                        <ul class="nav navbar-nav navbar-right">
                            <li class="">
                                <a href="javascript:;" class="user-profile dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                    <img src="/Areas/Admin/Contents/images/@Session["avatar"]" alt="">@Session["username"]
                                    <span class=" fa fa-angle-down"></span>
                                </a>
                                <ul class="dropdown-menu dropdown-usermenu pull-right">
                                    <li><a href="# "><i class="glyphicon glyphicon-user"></i> Profile</a></li>
                                    <li><a href="#"><i class="glyphicon glyphicon-home"></i> Home</a></li>
                                    <li><a href="#"><i class="fa fa-sign-out pull-right"></i> Log Out</a></li>
                                </ul>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
            <!-- /top navigation -->
            <!-- page Contents -->

            <div class="right_col" role="main">
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- jQuery -->
    <script src="/Areas/Admin/Contents/vendors/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap -->
    <script src="/Areas/Admin/Contents/vendors/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- FastClick -->
    <script src="/Areas/Admin/Contents/vendors/fastclick/lib/fastclick.js"></script>
    <!-- NProgress -->
    <script src="/Areas/Admin/Contents/vendors/nprogress/nprogress.js"></script>
    <!-- Chart.js -->
    <script src="/Areas/Admin/Contents/vendors/Chart.js/dist/Chart.min.js"></script>
    <!-- gauge.js -->
    <script src="/Areas/Admin/Contents/vendors/gauge.js/dist/gauge.min.js"></script>
    <!-- bootstrap-progressbar -->
    <script src="/Areas/Admin/Contents/vendors/bootstrap-progressbar/bootstrap-progressbar.min.js"></script>
    <!-- iCheck -->
    <script src="/Areas/Admin/Contents/vendors/iCheck/icheck.min.js"></script>
    <!-- Skycons -->
    <script src="/Areas/Admin/Contents/vendors/skycons/skycons.js"></script>
    <!-- Flot -->
    <script src="/Areas/Admin/Contents/vendors/Flot/jquery.flot.js"></script>
    <script src="/Areas/Admin/Contents/vendors/Flot/jquery.flot.pie.js"></script>
    <script src="/Areas/Admin/Contents/vendors/Flot/jquery.flot.time.js"></script>
    <script src="/Areas/Admin/Contents/vendors/Flot/jquery.flot.stack.js"></script>
    <script src="/Areas/Admin/Contents/vendors/Flot/jquery.flot.resize.js"></script>
    <!-- Flot plugins -->
    <script src="/Areas/Admin/Contents/vendors/flot.orderbars/js/jquery.flot.orderBars.js"></script>
    @*<script src="/Areas/Admin/Contents/flot-spline/js/jquery.flot.spline.min.js"></script>*@
    <script src="/Areas/Admin/Contents/vendors/flot.curvedlines/curvedLines.js"></script>
    <!-- DateJS -->
    <script src="../vendors/DateJS/build/date.js"></script>
    <!-- JQVMap -->
    <script src="/Areas/Admin/Contents/vendors/jqvmap/dist/jquery.vmap.js"></script>
    <script src="/Areas/Admin/Contents/vendors/jqvmap/dist/maps/jquery.vmap.world.js"></script>
    <script src="/Areas/Admin/Contents/vendors/jqvmap/examples/js/jquery.vmap.sampledata.js"></script>
    <!-- bootstrap-daterangepicker -->
    <script src="/Areas/Admin/Contents/vendors/moment/min/moment.min.js"></script>
    <script src="/Areas/Admin/Contents/vendors/bootstrap-daterangepicker/daterangepicker.js"></script>

    <script src="~/Content/Bootstrap/vendor/jquery/jquery-3.2.1.min.js"></script>
    <script src="~/Content/Bootstrap/vendor/bootstrap/js/popper.js"></script>
    <script src="~/Content/Bootstrap/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Content/Bootstrap/vendor/select2/select2.min.js"></script>

    <!-- Custom Theme Scripts -->
    @*<script src="/Areas/Admin/Contents/build/js/custom.min.js"></script>*@
    @RenderSection("Scripts", false)
