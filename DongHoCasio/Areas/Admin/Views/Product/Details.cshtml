@model DongHoCasio.Model.SanPham

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage1.cshtml";
}

<div>
    <h4>Chi Tiết Sản Phẩm</h4>
    <hr />
    <dl class="card-body">

