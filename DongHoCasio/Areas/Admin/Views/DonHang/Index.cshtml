@model IEnumerable<DongHoCasio.Model.DonHang>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Trang Quản Lý Đơn Hàng</h2>

<p>
    @Html.ActionLink("Tạo đơn hàng mới", "Create", null, htmlAttributes: new { @class = "btn  btn-custome btn-outline-info btn-lg btn-sm " })
</p>
<hr />
<table class="table">
    <tr>
        <th>
            Mã Đơn Hàng
        </th>
        <th>
            Ngày Mua
        </th>
        <th>
            Tồng Tiền
        </th>
        <th>
            UserName
        </th>
        
        <th>
            Email
        </th>
        <th>
            Trạng Thái Đơn Hàng
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.MaDH)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NgayMua)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TongTien)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.UserName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TrangThai)
    </td>
    <td>
        @Html.ActionLink("Sửa", "Edit", new { id = item.MaDH }, htmlAttributes: new { @class = "btn-wide btn btn-success btn-sm" }) |
        @Html.ActionLink("Chi Tiết", "Details", new { id = item.MaDH }, htmlAttributes: new { @class = "btn badge-warning btn-sm" }) |
        @Html.ActionLink("Xóa", "Delete", new { id = item.MaDH }, htmlAttributes: new { @class = "btn badge-danger btn-sm" })
    </td>
</tr>
}

</table>
